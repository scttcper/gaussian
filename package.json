{
  "name": "ts-gaussian",
  "version": "0.0.0",
  "description": "A TypeScript model of a Gaussian distribution",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-gaussian",
  "keywords": [
    "typescript",
    "gaussian",
    "normal",
    "distribution"
  ],
  "main": "./index.js",
  "module": "./es/index.js",
  "typings": "./index.d.ts",
  "sideEffects": false,
  "scripts": {
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint -p tsconfig.json -t codeFrame --fix 'src/**/*.ts' 'test/**/*.ts'",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "build": "npm run build-es6; npm run build-cmjs; ts-node build",
    "build-es6": "tsc -P ./tsconfig-build.json --outDir 'dist/es' --module es2015 -d false --moduleResolution node",
    "build-cmjs": "tsc -P ./tsconfig-build.json",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src && touch docs/.nojekyll",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run test -- --coverage --no-cache",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "cd dist && semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/fs-extra": "5.0.3",
    "@types/jest": "23.1.3",
    "@types/node": "10.3.6",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "fs-extra": "6.0.1",
    "jest": "23.1.0",
    "lint-staged": "7.2.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.6.0",
    "travis-deploy-once": "5.0.1",
    "ts-jest": "22.4.6",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-config-standard": "7.1.0",
    "typedoc": "0.11.1",
    "typescript": "2.9.2"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverage": true
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
