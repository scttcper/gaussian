{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
	"typedocOptions": {
		"out": "docs",
		"mode": "file",
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"exclude": "source/test",
		"ignoreCompilerErrors": true,
		"excludePrivate": true,
		"excludeNotExported": true,
		"stripInternal": true,
		"suppressExcessPropertyErrors": true,
		"suppressImplicitAnyIndexErrors": true,
		"theme": "minimal",
		"hideGenerator": true,
		"readme": "none"
	}
}
