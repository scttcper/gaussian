{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist/package-dist"
  },
  "files": [
    "./src/index"
  ],
	"typedocOptions": {
		"out": "docs",
		"mode": "file",
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"exclude": "source/test",
		"ignoreCompilerErrors": true,
		"excludePrivate": true,
		"excludeNotExported": true,
		"stripInternal": true,
		"suppressExcessPropertyErrors": true,
		"suppressImplicitAnyIndexErrors": true,
		"theme": "minimal",
		"hideGenerator": true,
		"readme": "none"
	}
}
